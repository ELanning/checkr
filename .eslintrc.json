{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": "warn",
        "@typescript-eslint/semi": "warn",
        "curly": "off",
        "eqeqeq": ["warn", "always", {"null": "never"}],
        "no-throw-literal": "warn",
        "arrow-parens": "off",
        "semi": "off"
    }
}
